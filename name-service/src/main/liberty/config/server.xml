<server description="Open Liberty Health Check example">

  <featureManager>
      <feature>jaxrs-2.1</feature>  
      <feature>mpHealth-1.0</feature>  
      <feature>mpFaultTolerance-2.0</feature> 
      <feature>websocket-1.1</feature>
      <feature>mpRestClient-1.3</feature>
      <feature>mpMetrics-2.0</feature>
      <feature>cdi-2.0</feature>
  </featureManager>

  <httpEndpoint httpPort="${default.http.port}" httpsPort="${default.https.port}"
                id="defaultHttpEndpoint" host="*" />

  <webApplication location="circuit-breaker-name.war" contextRoot="${app.context.root}"/>
   
  <cors domain="${app.context.root}"
      allowedOrigins="*"
      allowedMethods="*"
      allowedHeaders="*"/>
      
  <logging traceSpecification="com.ibm.ws.jaxrs.*=all:com.ibm.websphere.jaxrs.*=all:org.apache.cxf.jaxrs.*=all"/>
</server>
